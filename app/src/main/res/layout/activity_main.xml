<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/console">

    <TextView
            android:layout_width="232dp"
            android:layout_height="62dp"
            android:text="请输入 和别人不一样的，要和电脑浏览器里输的要一样，可以是自己的手机号"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="98dp"
            app:layout_constraintHorizontal_bias="1.0"
    />
    <Button
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button"
            tools:layout_editor_absoluteX="161dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editUsername"/>
    <EditText
            android:layout_width="242dp"
            android:layout_height="0dp"
            android:inputType="textPersonName|text"
            android:ems="10"
            android:id="@+id/editUsername"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp"
            app:layout_constraintHorizontal_bias="0.586" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="发送"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSend"
            app:layout_constraintTop_toBottomOf="@+id/textMessageLog" android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@+id/editSay"/>
    <TextView
            android:layout_width="326dp"
            android:layout_height="120dp"
            android:id="@+id/textMessageLog" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.492"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editSay" android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textMessageLog" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp"/>

</android.support.constraint.ConstraintLayout>